{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strict": true,
  },
  "exclude": [
    "node_modules"
  ]
}
